{
    "type": "node",
    "request": "launch",
    "name": "Jest Tests",
    "program": "${workspaceRoot}\\node_modules\\jest\\bin\\jest.js",
    "args": [
        "-i"
    ],
    "preLaunchTask": "build",
    "internalConsoleOptions": "openOnSessionStart",
    "outFiles": [
        "${workspaceRoot}/dist/**/*"
    ],
    "envFile": "${workspaceRoot}/.env",
    "configurations": [
        {
            "type": "node-terminal",
            "name": "Run Script: test",
            "request": "launch",
            "command": "npm run test",
            "cwd": "${workspaceFolder}"
        }
    ]
}