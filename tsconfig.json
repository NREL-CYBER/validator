{
    "compilerOptions": {
        "declaration": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "es5",
        "lib": [
            "ESNext"
        ],
        "esModuleInterop": true,
        "strict": true,
        "sourceMap": true,
        "noEmitOnError": true,
        "baseUrl": ".",
        "resolveJsonModule": true,
        "outDir": "dist"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "tests/**/*"
    ],
}